    function getbin(PermBit) {
        if (!checkfunctype("getbin", "integer", PermBit)) {exit(1)}
        Binary=bin(PermBit)
        Binary=trimprefix(Binary, "0b")
        Sizeb=3-len(Binary)
        if (Sizeb > 0) {
            Prefix=repeat("0", Sizeb)
            Binary=Prefix + Binary
        }
        return Binary
    }
    
