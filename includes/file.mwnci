        Data=fields(file(Filename, 1))
        Perms=Data[3]
        Owner=getbin(int(Perms[1]))[Bit]
        Group=getbin(int(Perms[2]))[Bit]
        Other=getbin(int(Perms[3]))[Bit]
        FileUID=data[7]
        FileGID=data[8]
    
        if (int(FileUID) == getuid()) {
